<Window x:Class="ritchell.library.ui.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ritchell.library.ui.View"
        mc:Ignorable="d" 
        Title="LoginWindow" Height="205.397" Width="403.367" FontFamily="Centaur" FontSize="18.667" Padding="10"
        DataContext="{Binding LoginViewModel, Source={StaticResource Locator}}">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label x:Name="label" Content="Username"/>
            <TextBox x:Name="textBox" TextWrapping="Wrap" Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="3"/>
            <Label x:Name="label_Copy" Content="Password"/>
            <TextBox x:Name="textBox_Copy" TextWrapping="Wrap" Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="3"/>
            <Button x:Name="button" Content="Login" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="0,10,0,0" Command="{Binding LoginCommand}"/>

        </StackPanel>
    </Grid>
</Window>
